<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Bom Preço</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/produtos">Produtos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/fornecedores">Fornecedores</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/movimentacao">Movimentação</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/relatorio/estoque">Relatórios</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container my-5">
    <h1 class="text-center mb-4"><%= title %></h1>

    <!-- Tabela de Fornecedores -->
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Nome</th>
            <th>Contato</th>
            <th>Endereço</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (fornecedores.length > 0) { %>
            <% fornecedores.forEach(fornecedor => { %>
              <tr>
                <td><%= fornecedor.nome %></td>
                <td><%= fornecedor.contato %></td>
                <td><%= fornecedor.endereco %></td>
                <td>
                  <a href="/fornecedores/editar/<%= fornecedor.id %>" class="btn btn-warning btn-sm">Editar</a>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">Nenhum fornecedor encontrado.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-3">
      <a href="/fornecedores/adicionar" class="btn btn-success">Adicionar Fornecedor</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
